      </envar>
      <envar>
        <name>FORMAT</name><value><cyclestr>%Y%m%d%H</cyclestr></value>
      </envar>

      <dependency>
        <some threshold="0.5">
          <datadep minsize="1B">&DATA_HOME;/test1.dat</datadep>
          <datadep minsize="1b">&DATA_HOME;/test2.dat</datadep>
          <datadep>&DATA_HOME;/test3.dat</datadep>
        </some>
